{
  "_comment_": "These should be part of execution",
  "model_name": "biLSTMDO",
  "word2vec_NO": "twitter",
  "_end_of_comment": "These should be part of execution",

  "name": "lstm",
  "cuda": true,
  "gpu": 0,
  "data_loader": {
    "data_dir": "datasets/",
    "batch_size": 32,
    "shuffle": false,
    "num_workers": 5
  },
  "validation": {
    "validation_split": 0.01,
    "shuffle": false
  },
  "lr_scheduler_type": "ExponentialLR",
  "lr_scheduler_freq": 1,
  "lr_scheduler": {
    "gamma": 0.8
  },
  "optimizer_type": "Adam",
  "optimizer": {
    "lr": 0.001,
    "weight_decay": 0
  },
  "loss": "nlll",
  "metrics": [
    "my_metric",
    "my_metric2",
    "accuracy",
    "youtube_acc2_copy"
  ],
  "trainer": {
    "epochs": 15,
    "save_dir": "saved/",
    "save_freq": 1,
    "verbosity": 2,
    "monitor": "val_loss",
    "monitor_mode": "min"
  }
}
